<!DOCTYPE html>
<html>
<head>
	<title>MovieDazZ</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  	<link rel="stylesheet" href="/res/library/bootstrap.min.css">
	<link rel="stylesheet" type="text/css" href="stylesheets/index.css">
</head>
<body>
	<nav class="navbar navbar-expand-md navbar-dark  text-white">
		<div class="container-fluid">	
			<a class="navbar-brand" href="#">Movie DazZ</a>
			<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
				<span class="navbar-toggler-icon"></span>
			</button>
			<div class="collapse navbar-collapse" id="collapsibleNavbar">	
				<ul class="navbar-nav">
					<li class="nav-item active">
						<a class="nav-link" href="#">Home</a>
					</li>	
					<li class="nav-item">
						<a class="nav-link" href="#">Latest Movies</a>
					</li>	
					<li class="nav-item">	
						<a class="nav-link" href="#">Evergreen Movies</a>
					</li>	
					<li class="nav-item">	
						<a class="nav-link" href="#">Celebrity</a>
					</li>	
					<li class="nav-item">	
						<a class="nav-link" href="#">Favourites</a>
					</li>		
				</ul>
				<form class="form-inline mx-auto nav-form" action="" method="">
				    <div class="input-group">
				    	<div class="input-group-prepend">
							<button type="button" class="btn  dropdown-toggle" data-toggle="dropdown">
							</button>
							<div class="dropdown-menu">
							  	<a class="dropdown-item active" href="#">Movie</a>
							  	<a class="dropdown-item" href="#">Celebrity</a>
							  <a class="dropdown-item" href="#">Trailer</a>
							</div>
						</div>
				      	<input type="text" class="form-control" placeholder="Search">
				      	<div class="input-group-append">
				        	<button class="btn btn-search" type="submit"><i class="fa fa-search"></i></button>
				      	</div>
				    </div>
				</form>
				<ul class="navbar-nav ml-auto">				
					<li class="nav-item">	
						<a class="nav-link" href="#">Login</a>
					</li>	
				</ul>
			</div>
		</div>
	</nav> 
	<main>
		<section class="landing">
			<div class="skewed">HELLLO</div>
			<div class="wrapper">
				<div class="motto">
					<h1>The Best Movie <span class="motto-1">Ratings</span> & <br><span class="motto-2">Downloading</span> Website</h1>
				</div>
			</div>
		</section>	
		<div class="container-fluid">
			<section class="m-trending mt-3">
				<div class="header">
					<h3>Trending</h3>
					<div class="hr"></div>
				</div>

				<div class="cards-wrapper">
					<div class="movie-cards">	
						<% trendingMovies.forEach((movie)=>{ %>
							<div class="movie-card">
								<img src="https://image.tmdb.org/t/p/original<%= movie[4]%>" class="">
								<div class="card-content">
									<h5 title="<%=movie[2]%>"><% if(movie[2].length > 20){%><%= movie[2].slice(0, 17)%>...<%}else{%><%= movie[2]%><%}%></h5>
									<div class="card-release"><%=movie[3]%></div>
								</div>
							</div>
						<% }); %>
					</div>
				</div>			
			</section>
			<section class="m-trending mt-3">
				<div class="header">
					<h3>In Theatres</h3>
					<div class="hr"></div>
				</div>

				<div class="cards-wrapper">
					<div class="movie-cards">	
						<% theatreMovies.forEach((movie)=>{ %>
							<div class="movie-card">
								<img src="https://image.tmdb.org/t/p/original<%= movie[4]%>" class="">
								<div class="card-content">
									<h5 title="<%=movie[2]%>"><% if(movie[2].length > 20){%><%= movie[2].slice(0, 17)%>...<%}else{%><%= movie[2]%><%}%></h5>
									<div class="card-release"><%=movie[3]%></div>
								</div>
							</div>
						<% }); %>
					</div>
				</div>			
			</section>
			<section class="m-trending mt-3">
				<div class="header">
					<h3>Upcoming</h3>
					<div class="hr"></div>
				</div>

				<div class="cards-wrapper">
					<div class="movie-cards">	
						<% upcomingMovies.forEach((movie)=>{ %>
							<div class="movie-card">
								<img src="https://image.tmdb.org/t/p/original<%= movie[4]%>" class="">
								<div class="card-content">
									<h5 title="<%=movie[2]%>"><% if(movie[2].length > 20){%><%= movie[2].slice(0, 17)%>...<%}else{%><%= movie[2]%><%}%></h5>
									<div class="card-release"><%=movie[3]%></div>
								</div>
							</div>
						<% }); %>
					</div>
				</div>			
			</section>
		</div>
	</main>
	
	<script src="/res/library/jquery-3.5.0.min.js"></script>
	<script src="/res/library/popper.min.js"></script>
	<script src="/res/library/bootstrap.min.js"></script>
	<script type="text/javascript">
		let skewed = document.querySelector(".skewed");
		window.addEventListener('scroll', function(){
			let value = -7 + window.scrollY/60;
			skewed.style.transform = "skewY("+ value +"deg)";
		})
	</script>
	<script type="text/javascript">
		
	</script>
</body>
</html>