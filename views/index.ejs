		<section class="landing">
			<div class="skewed">HELLLO</div>
			<div class="wrapper">
				<div class="motto">
					<h1>The Best Movie <span class="motto-1">Ratings</span> & <br><span class="motto-2">Downloading</span> Website</h1>
				</div>
			</div>
		</section>	
		<div class="container-fluid">
			<section class="m-trending mt-3">
				<div class="header">
					<h3 style="">Trending<span class="pull-right"><a href="/movie/trending/">View All</a></span></h3>
				</div>

				<div class="cards-wrapper">
					<div class="movie-cards">	
						<% trendingMovies.forEach((movie)=>{ %>
							<div class="movie-card">
								<a href="/movie/<%= movie[0]%>-<%=movie[2].split(' ').join('-')%>/">
									<div class="img">
										<img src="https://image.tmdb.org/t/p/original<%= movie[4]%>" class="">	
									</div>			
								</a>					
								<div class="">
									<% if(currentUser && currentUser.favouriteMovieList.some((id)=>{ return id == movie[0]})){ %>
										<span class="favourite" title="Remove From Favourite">
											<form method="POST" action="/favourite/<%= movie[0] %>?_method=DELETE">
												<button style="background:transparent; border:0;outline: none">
													<i class="fa fa-heart active"></i>
												</button>
											</form>
										</span>
									<%}else{%>
										<span class="favourite" title="Add to Favourite">
											<form method="POST" action="/favourite">
												<input type="hidden" name="id" value="<%= movie[0]%>">
												<input type="hidden" name="title" value="<%= movie[2]%>">
												<input type="hidden" name="release" value="<%= movie[3]%>">
												<input type="hidden" name="img" value="https://image.tmdb.org/t/p/original<%= movie[4]%>">
