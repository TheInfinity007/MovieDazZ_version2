<%- include('partials/header') %>

<div class="row">
	<h1 class="text-center">Login</h1>	
	<div class="form-horizontal">
		<form action="/login" method="POST" class="">
			<div class="form-group">
				<label for = "username" class = "control-label col-md-3">Username:</label>
				<div class="col-md-9">
					<input type="text" name="username" placeholder="Username" class="form-control">		
				</div>
			</div>
			<div class="form-group">
				<label for = "password" class = "control-label col-md-3">Password:</label>
				<div class="col-md-9">
					<input type="password" name="password" placeholder="Password" class="form-control">
				</div>
			</div>
			<div class = "form-group">
				<div class = "col-md-offset-3 col-md-9">
					<div class = "checkbox">
						<label class = ""><input type = "checkbox" name = "remember">Remember Me</label>
						<a href = "/forgot" class = "" style="float:right">Forget Password ?</a>				
					</div>
				</div>
			</div>
			<div class="form-group">
				<div class = "col-md-offset-3 col-md-9">
					<input class = "btn btn btn-primary btn-block" type="submit" value = "Login">
				</div>
			</div>
			<div class = "form-group">			
				<div class = "col-md-offset-3 col-md-9">
					<label class = "control-label">Don't have an account? <a href = "/register/">Register</a></label>
				</div>
			</div>
		</form>
		<br>
		<span style="padding-left:8%"><a href="/campgrounds">Go Back</a></span>
	</div>
</div>



<%- include('partials/footer') %>